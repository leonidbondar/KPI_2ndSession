type NonNumericAndNonAlphabetic = set of char;
var 
p : NonNumericAndNonAlphabetic; { ??????? ????? }
inputData : string; { ??????? ????? ???????? }
i : integer; { ?????? ?????? }
counter : integer; {shows number of non literal, non numeric chars}

procedure ProcessString(inputData: string);
begin
p := [];
counter := 0;
for i:=1 to Length(inputData) do
     begin
       if not (inputData[i] in ['0'..'9', 'a'..'z', 'A'..'Z']) then begin
       p:= p + [inputData[i]];
       counter := counter + 1;
       Write(inputData[i]);
       end;
end;
WriteLn;
Write('Number of non-numeric and non-alphabetic chars is: ');
WriteLn(counter);
end;
       
begin
